{
	"name": "nodejs-todo",
	"version": "1.0.0",
	"description": "A simple to do list app ",
	"main": "server/app.js",
	"scripts": {
		"start": "node -r dotenv/config server/app.js",
		"dev": "nodemon -r dotenv/config server/app.js",
		"build": "npm run build:client && npm run build:server",
		"build:client": "vite build --outDir dist/client",
		"build:server": "vite build --outDir dist/server --ssr client/entry-server.jsx",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"engines": {
		"node": ">=15"
	},
	"author": "Vanessa Ating",
	"license": "ISC",
	"dependencies": {
		"body-parser": "^1.18.0",
		"ejs": "^3.1.8",
		"express": "^4.15.4",
		"mongodb": "^4.2.2",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@vitejs/plugin-react": "^2.2.0",
		"dotenv": "^16.0.3",
		"nodemon": "^2.0.20",
		"vite": "^3.2.4"
	},
	"nodemonConfig": {
		"watch": [
			"server/**/*",
			".env"
		]
	},
	"prettier": {
		"quoteProps": "consistent",
		"printWidth": 120,
		"useTabs": true,
		"semi": false,
		"singleQuote": true,
		"jsxSingleQuote": false,
		"trailingComma": "es5",
		"bracketSpacing": true,
		"jsxBracketSameLine": false,
		"arrowParens": "avoid",
		"htmlWhitespaceSensitivity": "strict",
		"endOfLine": "lf"
	}
}
